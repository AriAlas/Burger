<div class="container">
    <section id="page-name">
            <img id="main-image" src="https://res.cloudinary.com/teepublic/image/private/s--LhEOsEDZ--/t_Preview/b_rgb:484849,c_limit,f_jpg,h_630,q_90,w_630/v1484814181/production/designs/1123505_1.jpg" width="200" height="200" >
            <h1>Eat-Da-Buger</h1>
    </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}}
                    {{#unless Devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if Devoured}}
                    <div>{{ID}}. {{Burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="Burger_name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button type="submit" class = "addBurger">Add Burger</button>
    </form>     
</div>